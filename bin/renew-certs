#!/bin/bash
#
# renew-certs is a simple wrapper around a Docker container to renew Lets Encrypt
# certificates authenticated against Cloudflare DNS using the DNS-01 auth method.
#
# Copyright (C) 2023 Alan Doyle
#
# https://github.com/alandoyle/docker-cloudflare-certbot
#
################################################################################
#
# Root check
#
if [ `id -u` -ne 0 ] ; then
    echo "ERROR: This script needs to be run as root or using sudo."
    exit 99
fi
#
################################################################################
#
BINDIR=$(dirname `realpath $0`)
DOCKERDIR=$(dirname ${BINDIR})
WILDCARD=false
#
################################################################################
#
if [ ! -f /etc/certbot-cf/credentials ] ; then
    echo "ERROR: Cloudflare credentials missing!"
    exit 99
fi
#
################################################################################
#
chmod 600 /etc/certbot-cf/credentials 2>/dev/null
if [ ! -f ${DOCKERDIR}/.env ] ; then
    echo "EMAIL=private@domain.com" > ${DOCKERDIR}/.env
fi
#
################################################################################
#
cd ${DOCKERDIR}
docker compose up
RETVAL=$?
#
################################################################################
#
for RESTART_SCRIPT in $(ls /etc/certbot-cf/restart)
do
    echo "Running ${RESTART_SCRIPT}..."
    bash "$RESTART_SCRIPT"
done
#
################################################################################
